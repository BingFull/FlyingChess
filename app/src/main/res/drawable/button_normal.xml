<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="3sp" android:color="#ffffffff"/>
            <solid android:color="#FFbbb060"/>
            <corners android:radius="10dp"/>
            <padding android:left="3dp" android:right="3dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="3sp" android:color="#ffffffff"/>
            <solid android:color="#FFFFE6A0"/>
            <corners android:radius="10dp"/>
            <padding android:left="5sp" android:right="5sp" android:bottom="5sp" android:top="5sp"/>
        </shape>
    </item>
</selector>