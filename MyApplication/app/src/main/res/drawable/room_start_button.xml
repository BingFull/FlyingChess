<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="4dp" android:color="#ffffff00"/>
            <solid android:color="#ffffca00"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="4dp" android:color="#ffeeee00"/>
            <gradient android:startColor="#eeee6600" android:centerColor="#aaeedd00" android:endColor="#ee4488aa" android:angle="45"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
</selector>